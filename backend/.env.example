# Database credentials
# For Dokploy deployment (internal connection - set these in Dokploy environment variables):
# DB_HOST=your-internal-db-host
# DB_PORT=5432
# DATABASE_URL=postgresql://username:password@your-internal-db-host:5432/dbname

# For local development (external connection):
DATABASE_URL=postgresql://username:password@your-db-host:5433/dbname

# Django settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# HTTPS Configuration
# Set to True only when HTTPS is enabled in Dokploy/Traefik
# If False, Django won't redirect HTTP to HTTPS
USE_HTTPS=False

# CORS settings (update with your frontend domain)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://your-domain.com

# Database connection details
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your-database-password-here
DB_HOST=your-db-host
DB_PORT=5432
